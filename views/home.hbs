<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
      }

      .container {
        margin: 0 auto;
        height: 100%;
        overflow: hidden;
      }

      .content {
        width: 100%;
        height: 100%;
      }

      .navbar {
        width: 100%;
        display: flex;
        flex-direction: column;
        border-bottom: 1px dashed;
        border-color: gainsboro;
        position: fixed;
      }

      a {
        text-decoration: none;
      }

      .nav {
        padding: 0 10rem;
      }

      .nav-content {
        width: 100%;
        display: flex;
        flex-direction: row;
        padding: 1.5rem 2rem;
        align-items: center;
        justify-content: space-between;
      }

      .form {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 400px;
        margin-bottom: 0;
      }

      .form-content {
        width: 100%;
        display: flex;
        flex-direction: column;
      }

      .form-group { 
        display: flex;
        flex-direction: column;
        margin-bottom: 2rem;
      }
      .form-group .copy {
        display: inline-flex;
        position: relative;
      }

      .form-group .copy button {
        position: absolute;
        top: 0;
        right: 0;
      }
      
      .form-group label{
        margin-bottom: 1.5rem;
        font-size: 20px;
      }

     .form-group input {
        width: 100%;
        height: 40px;
        font-size: 20px;
        text-align: center;
        border-radius: 5px;
     }

     input:focus {
      outline: none;
     }

     .main {
        margin: 0 auto;
        width: 100%;
        max-width: 1920px;
        display: flex;
        flex-direction: column;
        align-items: center;
     }

     .button {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        background-color: black;
        color: white;
        font-size: 16px;
        height: 3.5rem;
        border: none;
        border-radius: 5px;
        padding: 0 2rem;
        cursor: pointer;
        font-weight: 500;
      }

      .button:hover {
        color: black;
        border: 1px solid black;
        background-color: white;
      }

    </style>
  </head>
  <body>
    <div class="container">
      <div class="content">
        <div style="display: flex; flex-direction:column;">
          {{> 'partials/navbar'}}
          <div style="justify-content:center;" class="main">
            <form action="/" method="post" class="form">
              <div class="form-content">
                <div class="form-group">
                  <label for="longUrl">Your Long Url</label>
                  <input type="text" name="longUrl">
                </div>
                <div class="form-group">
                  <label for="shortUrl">Shorten Url</label>
                  <div class="copy">
                    <input type="text" name="shortUrl" value={{shortUrl}} readonly>
                    <button>copy</button>
                  </div>
                </div>
                <div>
                  <button type="submit" class="button" style="width: 100%; margin-top: 2rem;">Shorten</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>